<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="ShuttleSkyfallerBase">
    <defName>Missile_HE_Incoming</defName>
    <label>ballistic missile (incoming)</label>
	<thingClass>SRTS.SRTSIncoming</thingClass>
    <graphicData>
      <texPath>Missile/MissileBasic</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutFlying</shaderType>
      <drawSize>(2,2)</drawSize>
	  <color>(255,255,255)</color>
    </graphicData>
    <skyfaller>
      <shadow>Things/Skyfaller/SkyfallerShadowRectangle</shadow>
      <shadowSize>(0.7,0.7)</shadowSize>
      <motesPerCell>1</motesPerCell>
      <anticipationSound>Shuttle_Landing</anticipationSound>
      <anticipationSoundTicks>250</anticipationSoundTicks>
      <ticksToImpactRange>200~250</ticksToImpactRange>
      <angleCurve>
        <points>
          <li>(0,-45)</li>
		  <li>(0.3,-42)</li>
          <li>(1,-40)</li>
        </points>
      </angleCurve>
      <rotationCurve>
        <points>
          <li>(-90,120)</li>
          <li>(-90.5,95)</li>
          <li>(-90.9,95)</li>
          <li>(-90.95,90)</li>
        </points>
      </rotationCurve>
      <zPositionCurve>
        <points>
          <li>(0.95,2.5)</li>
          <li>(1,0)</li>
        </points>
      </zPositionCurve>
      <speedCurve>
        <points>
          <li>(0.6,0.6)</li>
          <li>(0.95,0.5)</li>
        </points>
      </speedCurve>
      <explosionRadius>6</explosionRadius>
      <explosionDamage>Bomb</explosionDamage>
    </skyfaller>
  </ThingDef>

  <ThingDef ParentName="ShuttleSkyfallerBase">
    <defName>Missile_HE_Leaving</defName>
    <label>ballistic missile (leaving)</label>	
	<thingClass>SRTS.SRTSLeaving</thingClass>
    <graphicData>
      <texPath>Missile/MissileBasic</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutFlying</shaderType>
      <drawSize>(2,2)</drawSize>
	  <color>(255,255,255)</color>
    </graphicData>
    <skyfaller>
      <shadow>Things/Skyfaller/SkyfallerShadowRectangle</shadow>
      <shadowSize>(0.7,0.7)</shadowSize>
      <motesPerCell>1</motesPerCell>	
      <reversed>true</reversed>
      <anticipationSound>Shuttle_Leaving</anticipationSound>
      <anticipationSoundTicks>-10</anticipationSoundTicks>
      <ticksToImpactRange>-40~-15</ticksToImpactRange>
      <moteSpawnTime>0.05</moteSpawnTime>
      <angleCurve>
        <points>
          <li>(0,45)</li>
		  <li>(0.3,42)</li>
          <li>(1,40)</li>
        </points>
      </angleCurve>
      <rotationCurve>
        <points>
          <li>(90,90)</li>
          <li>(90.15,92)</li>
          <li>(90.5,88)</li>
        </points>
      </rotationCurve>
      <zPositionCurve>
        <points>
          <li>(0,0)</li>
          <li>(0.08,2)</li>
        </points>
      </zPositionCurve>
      <speedCurve>
        <points>
          <li>(0,0.2)</li>
          <li>(0.4,0.7)</li>
        </points>
      </speedCurve>
    </skyfaller>
  </ThingDef>
  
  <ThingDef>
    <defName>Missile_HE_Active</defName>
    <label>ballistic missile</label>
    <category>Item</category>
    <thingClass>ActiveDropPod</thingClass>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Missile/MissileBasic</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <altitudeLayer>Skyfaller</altitudeLayer>
    <blockWind>false</blockWind>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>1</Flammability>
    </statBases>
    <selectable>true</selectable>
  </ThingDef>

</Defs>